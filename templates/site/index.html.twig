{% extends 'base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="frame">
			<div class="frame-title">
				<h1>{{ 'Pr√©sentation'|trans }}</h1>
			</div>
			<div class="frame-body">
				<p>{{ 'Bonjour et bienvenue sur mon site.'|trans }}</p>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="frame">
			<div class="frame-title">
				<h1>{{ 'Loisirs'|trans }}</h1>
			</div>
			<div class="frame-body">
				<div class="carrousel">
					<div class="carrousel-item">
						<h4 class="text-center">{{ 'La moto'|trans }}</h4>
						<img class="img-50" src="{{ asset('img/moto.jpg') }}">
					</div>
					<div class="carrousel-item">
						<h6>{{ 'La montagne'|trans }}</h6>
					</div>
					<button onclick="changeItem()">test</button>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	var index=0;
	var carrousel = document.getElementsByClassName("carrousel-item");
	var carrouselItems = [];
	for (element in carrousel){
		try{
			if (carrousel[element].classList.contains("carrousel-item")){
				carrouselItems.push(carrousel[element]);
			}
		}
		catch(error){
			if (error instanceof TypeError){}
			else{
				throw error
			}
		}
	}
	carrouselItems[index].classList.add("active");
	function changeItem(){
		carrouselItems[index].classList.remove("active");
		index++;
		if (index>carrouselItems.length-1){
			index=0
		}
		carrouselItems[index].classList.add("active");
	}
</script>
{% endblock %}
