{% extends 'base.html.twig' %}
{% block title %}{{ 'Gestion prestations'|trans }}{% endblock %}

{% block body %}
<div class="container">
    <div class="frame">
        <div class="frame-title">
        <h1>Prestations</h1>
        </div>
        <div class="frame-body">
            <form action="/ajout_commande" method="POST">
            {% for prestation in prestations %}
                <div class="frame">
                        <div class="frame-title">
                            <input type="checkbox" name="presta[]" value="{{prestation.id}}">
                            <h1>{{prestation.nom}}</h1>
                        </div>
                        <div class="frame-body">
                            <p>{{prestation.description}}</p>
                        </div>
                    
                </div>
            {% endfor %}
            <button type="submit" class="button">Passer Commande</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}