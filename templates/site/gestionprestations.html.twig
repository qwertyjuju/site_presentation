{% extends 'base.html.twig' %}
{% block title %}{{ 'Gestion prestations'|trans }}{% endblock %}

{% block body %}
<div class="container">
    <div class="frame">
        <div class="frame-title">
            <h1>Gestion image prestation</h1>
        </div>
        <div class="frame-body">
            <form action="/ajout_image" method="POST">
                <input type="file" class="string" id="staticFile" name="image" required><br>
                 <button type="submit" class="button">Televerser image</button>
            </form>
        </div>
    </div>
    <div class="frame">
        <div class="frame-title">				
            <h1>{{ 'Ajout Prestation'|trans }}</h1>
		</div>
        <div class="frame-body">
            <form action="/ajout_prestation" method="POST">
                <div>
                    <label for="staticNom">Nom prestation</label><br>
                    <input type="text" class="string" id="staticNom" name="Nom" required><br>
                </div>
                <div>
                    <label for="staticDescription">Description</label><br>
                    <textarea id="staticDescription" class="full-width" name="Description"></textarea><br>
                </div>
                <div>
                    <label for="staticImage" >Image</label><br>
                    <select id="staticImage" name="Image">
                        <option value="">--selectionner image--</option>
                        {% for image in images %}
                            <option value={{image}}>{{image}}</option>
                        {% endfor %}
                    </select><br>
                </div>
                <div>
                    <label for="staticPrix">Prix</label><br>
                    <input type="number" step="0.01" id="staticPrix" name="Prix" required><br>
                </div>
                <button type="submit" class="button">Ajout prestation</button>
            </form>
        </div>
    </div>
    <div class="frame">
        <div class="frame-title">
            <h1>{{ 'Prestations'|trans }}</h1>
        </div>
        <div class="frame-body">
            {% for prestation in prestations %}
                <div class="frame">
                    <div class="frame-title">
                        <h1>{{prestation.nom}}</h1>
                    </div>
                    <div class="frame-body">
                        <p>{{prestation.description}}</p>
                        <p><strong>Prix:</strong> {{prestation.prix}} euros</p>
                        <form action="/suppr_prestation" method="POST">
                            <button type="submit" class="button" value={{prestation.id}} name="presta_Id">Supprimer prestation</button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}