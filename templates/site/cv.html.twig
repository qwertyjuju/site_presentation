    <div class="row">
        <div class="frame">
            <div class="frame-title">
                <h1>{{ 'Telecharger le CV'|trans }}</h1>
            </div>
            <div class="frame-body">
                <p>
                    {{ form(form) }}
                </p>
            </div>
        </div>
    </div>
</div>
<script>
    var index = 0
    var elems = document.getElementsByClassName("openable-frame")
    var openableFrames = []
    for (elem in elems){
        try{
            if (elems[elem].classList.contains("openable-frame")){
                openableFrames.push(elems[elem])
            }
        }
        catch (error){
            if (error instanceof TypeError){}
            else{
                throw error
            }
        }
    }
    openableFrames[index].getElementsByClassName("openable-frame-body")[0].classList.add("active")
    function openframe(i){
        openableFrames[index].getElementsByClassName("openable-frame-body")[0].classList.remove("active")
        index = i
        openableFrames[index].getElementsByClassName("openable-frame-body")[0].classList.add("active")
    }
</script>
